<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="3dp"
    android:background="@color/colorAccent"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="17dp"
            android:text="Order Id : 123"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/orderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:drawablePadding="2dp"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_rupee_indian"
            android:text="1000"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/orderAmounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:background="@color/black1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
    <LinearLayout
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="3dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="mohan"
            android:id="@+id/addressDeytails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="mohan"
            android:drawablePadding="2dp"
            android:drawableTint="@color/colorAccent1"
            android:drawableLeft="@android:drawable/stat_sys_phone_call"
            android:id="@+id/phoneNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <View
        android:background="@color/black1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="2dp"
            android:textSize="17dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:text="Order Id : 123"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/orderedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_alignParentRight="true"
            android:textSize="17dp"

            android:text="1000"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/deliveryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</LinearLayout>