<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shop.fragments.Unique">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:alpha="0.1"
            android:background="@color/backColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.codesgood.views.JustifiedTextView
            android:gravity="center|start"
            android:id="@+id/tv_justified_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textStyle="bold"
            android:textFontWeight="500"
            android:text="These include bio-mechanically engineered pairs of designer footwear that reduces the risk of skin breakdown, especially for people with diabetes.
Pharmacy Products."
            android:textColor="@color/colorAccent1"
            android:textSize="18sp" />

    </FrameLayout>
    <LinearLayout
        android:background="@color/backColor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RadioGroup

            android:padding="7sp"
            android:id="@+id/uradioGroup"
            android:gravity="center"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton

                android:drawableTint="@color/colorPrimaryDark"
                android:id="@+id/uradioAll"
                android:text="All"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:drawableTint="@color/colorPrimaryDark"
                android:id="@+id/uradioGents"
                android:text="Gents"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:drawableTint="@color/colorPrimaryDark"
                android:id="@+id/uradioLadies"
                android:text="Ladies"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:drawableTint="@color/colorPrimaryDark"
                android:id="@+id/uradioUnisex"
                android:text="Unisex"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </RadioGroup>



    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/uniqueRecycler"
        android:layout_height="wrap_content"/>


</LinearLayout>