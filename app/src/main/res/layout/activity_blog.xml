<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="mv.hospital.aboutUs.Blog">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/blogTool"
        app:titleTextColor="@color/white"
        android:background="@color/colorAccent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/blogimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_weight="4.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/showBlogs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="40dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:background="@drawable/circle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_03"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />



                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"

                            android:gravity="bottom"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="10 Hidden Facts about Diabetes"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />





                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/showBlog"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:gravity="center|bottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginRight="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginTop="10dp"
                            android:text="Break your fast for a healthy life"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="40dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <LinearLayout
                                android:background="@drawable/circle"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:scaleType="fitXY"
                                    android:src="@drawable/img_02"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout

            android:layout_weight="0.3"
            android:id="@+id/aboutFounder"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/backColor"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
               android:text="ABOUT FOUNDER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/user"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>