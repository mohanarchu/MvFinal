<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="17dp"
                android:text="Order Id : 123"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/orderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:drawablePadding="2dp"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:drawableLeft="@drawable/ic_rupee_indian"
                android:text="1000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/orderAmounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:background="@color/black1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="mohan"
                android:textFontWeight="600"
                android:id="@+id/addressDeytails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        </LinearLayout>
        <View
            android:background="@color/black1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textSize="15dp"
                android:textColor="@color/black1"
                android:text="mohan"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:drawableTint="@color/colorAccent1"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:id="@+id/phoneNumbers"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:drawablePadding="5dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:text="Order Id : 123"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textColor="@color/black1"
                android:id="@+id/orderedDate"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>


            <TextView
                android:layout_alignParentRight="true"
                android:textSize="17dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="1000"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/deliveryStatus"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>