<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:gravity="center"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="19dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="ProductName"
        android:id="@+id/productname_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>


    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:progressTint="@color/colorAccent1"
        android:numStars="5"
        android:id="@+id/post_rating_tab"
        android:layout_height="50dp"/>


    <EditText
        android:layout_marginTop="20dp"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/review_descriptions"
        android:hint="Describe (optional)"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/post_rating"
        app:cardBackgroundColor="@color/colorAccent1"
        android:layout_height="40dp">

        <TextView
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="POST"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>