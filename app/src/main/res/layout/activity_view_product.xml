<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".cart.ViewProduct">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/producttool"
            app:titleTextColor="@color/white"
            android:background="@color/colorAccent1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.Toolbar>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView


                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/nameOfProduct"
                            android:text="Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingRight="5dp"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_rupee_indian"
                            android:textSize="20dp"
                            android:drawablePadding="4dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/amountOfPro"
                            android:text="20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1"
                        android:id="@+id/alignText"
                        android:lines="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>


                <LinearLayout

                    android:weightSum="2"
                    android:orientation="vertical"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:background="@color/white"
                        android:orientation="vertical"

                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/imageRecycler"
                            android:layout_width="match_parent"
                            android:layout_weight="0.75"
                            android:layout_height="300dp"/>

                        <me.relex.circleindicator.CircleIndicator2
                            android:id="@+id/pagerIndicator"

                            app:ci_drawable_unselected="@drawable/oval"
                            app:ci_drawable="@drawable/oval_active"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"/>
                        <ImageView
                            android:scaleType="fitXY"
                            android:visibility="gone"
                            android:id="@+id/myProductImage"
                            android:src="@drawable/down"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_weight="0.15"
                            android:weightSum="2"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">


                            <LinearLayout

                                android:weightSum="3"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">

                                <LinearLayout

                                    android:visibility="gone"
                                    android:id="@+id/goneLayout"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp">
                                    <TextView
                                        android:id="@+id/colorText"
                                        android:textSize="16dp"
                                        android:textColor="@color/black1"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:background="@drawable/line"
                                        android:text="Nil"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp" />
                                </LinearLayout>



                                <LinearLayout
                                    android:weightSum="2"
                                    android:layout_weight="2"
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_alignParentLeft="true"
                                        android:id="@+id/sizeSpinner"
                                        android:textSize="16dp"
                                        android:textColor="@color/colorAccent"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="10sp"
                                        android:gravity="center"
                                        android:background="@drawable/line"
                                        android:text="Nil"
                                        android:layout_width="0dp"
                                        android:layout_height="35dp" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_alignParentLeft="true"
                                        android:id="@+id/colorSpinner"
                                        android:textSize="16dp"
                                        android:textColor="@color/colorAccent"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="5sp"
                                        android:gravity="center"
                                        android:background="@drawable/line"
                                        android:text="Nil"
                                        android:layout_width="0dp"
                                        android:layout_height="35dp" />
                                </LinearLayout>



                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/colorAccent"
                        />











                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/specsRecycler"
                    android:padding="25dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:padding="10sp"
                    android:orientation="vertical"
                   android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <androidx.cardview.widget.CardView

                            app:cardCornerRadius="4dp"
                            android:id="@+id/addToCart"

                            app:cardBackgroundColor="@color/colorAccent1"
                            android:layout_width="match_parent"
                            android:layout_height="37dp">

                            <TextView
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:text="ADD TO CART"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/buyNow"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/colorAccent1"
                            android:layout_width="match_parent"
                            android:layout_height="37dp">
                            <TextView
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:text="BUY NOW"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </ScrollView>

    </LinearLayout>






</RelativeLayout>