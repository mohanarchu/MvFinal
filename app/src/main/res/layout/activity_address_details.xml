<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddressDetails">



    <androidx.appcompat.widget.Toolbar


        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:id="@+id/tools"
        app:title="Address"
        app:titleTextColor="@color/white"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:padding="3dp"
                android:layout_marginTop="3dp"
                android:textSize="17dp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                app:cardCornerRadius="3dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="3dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Biling Address"
                        android:textColor="@color/flutter_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:paddingLeft="5dp"
                                android:text="Name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="textImeMultiLine"
                                android:maxLines="2"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:paddingLeft="5dp"
                                android:text="Phone number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/dPhone"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="number"
                                android:maxLines="2"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:paddingLeft="5dp"
                                android:text="Email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <EditText
                                android:id="@+id/dEmail"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="textEmailAddress"
                                android:maxLines="2"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <EditText

                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Door number"
                                    android:inputType="number"
                                    android:paddingLeft="5dp"
                                    android:singleLine="true" />


                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1">

                            <TextView
                                android:paddingLeft="5dp"
                                android:text="Address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                            <EditText
                                android:id="@+id/dStreet"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="textImeMultiLine"
                                android:maxLines="2"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/streetInput"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:paddingLeft="5dp"
                                android:text="State"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:gravity="center|start"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:id="@+id/dState"
                                android:textColor="@color/black1"
                                android:textSize="18dp" />
                            <View
                                android:layout_marginLeft="5dp"
                                android:background="@color/black1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:paddingLeft="5dp"
                                android:text="City"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/dCity"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:gravity="center|start"
                                android:paddingLeft="5dp"
                                android:background="@null"
                                android:singleLine="true"
                                android:textColor="@color/black1"
                                android:textSize="18dp" />
                            <View
                                android:layout_marginLeft="5dp"
                                android:background="@color/black1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"

                                android:paddingLeft="5dp"
                                android:text="Country"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:text="Pincode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:weightSum="2">

                            <LinearLayout

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">




                                    <EditText
                                        android:id="@+id/dCountry"
                                        android:layout_width="match_parent"
                                        android:layout_height="33dp"
                                        android:background="@null"
                                        android:clickable="false"
                                        android:gravity="start|center"
                                        android:paddingLeft="5dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black1"
                                        android:textSize="17dp" />



                                <View
                                    android:layout_marginLeft="5dp"
                                    android:background="@color/black1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <EditText
                                    android:id="@+id/dPincode"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:gravity="start|center"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLength="6"
                                    android:paddingLeft="5dp"
                                    android:singleLine="true"
                                    android:textSize="18dp" />
                                <View
                                    android:layout_marginLeft="5dp"
                                    android:background="@color/black1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/sameAs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Same as billing address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/makePayment"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Make Payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>