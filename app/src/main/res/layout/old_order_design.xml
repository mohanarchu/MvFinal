<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <LinearLayout

        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:background="@color/white"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <ImageView

                android:id="@+id/old_image"
                android:scaleType="fitXY"
                android:src="@drawable/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>



        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_weight="0.75"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:padding="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView


                    android:id="@+id/oldProductName"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="ProductName"
                    android:singleLine="true"
                    android:layout_alignParentStart="true"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </TextView>
                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:layout_width="110dp"
                    android:id="@+id/order_rating"
                    android:numStars="5"
                    android:focusable="true"
                    android:progressTint="@color/colorAccent1"
                    android:max="5"
                    android:visibility="visible"
                    android:layout_gravity="end"
                    android:layout_alignParentRight="true"
                    android:layout_height="25dp"/>

            </RelativeLayout>



            <TextView
                android:padding="4dp"
                android:id="@+id/oldProductCode"
                android:textSize="14dp"
               android:visibility="gone"
                android:text="Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:padding="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView



                    android:drawableTint="@color/white"

                    android:id="@+id/oldsizeSpinner"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:textColor="@color/black1"
                    android:layout_width="100dp"
                    android:layout_height="20dp"/>

                <TextView

                    android:textStyle="bold"
                    android:textColor="@color/black1"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:id="@+id/oldcolorSpinner"
                    android:layout_width="100dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_height="match_parent">




                    <TextView

                        android:textStyle="bold"
                        android:textColor="@color/black1"
                        android:text="1 "
                        android:id="@+id/oldtotalCount"
                        android:layout_width="wrap_content"
                        android:textSize="13dp"
                        android:layout_height="wrap_content" />





                </LinearLayout>



                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:id="@+id/oldtotalAmount"
                    android:drawableLeft="@drawable/ic_rupee_indian"
                    android:paddingRight="6dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="600 "
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>





        </LinearLayout>






    </LinearLayout>




</androidx.cardview.widget.CardView>